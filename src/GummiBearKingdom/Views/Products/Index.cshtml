@{
    ViewData["Title"] = "GummiBearKingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />

}

@model IEnumerable<GummiBearKingdom.Models.Product>





    <h2>Gummi Bear Kingdom Products:</h2>
    <ul>
        @foreach (var listProduct in Model)
        {
        <li>Name: @Html.DisplayFor(modelItem => listProduct.Name) @Html.ActionLink("Details", "Details", new { id = listProduct.ProductsId }) | @Html.ActionLink("Edit", "Edit", new { id = listProduct.ProductsId }) | @Html.ActionLink("Delete", "Delete", new { id = listProduct.ProductsId }) </li>
            
        }
    </ul>
    <p>@Html.ActionLink("Add new product", "Create")</p>
